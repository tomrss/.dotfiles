;;; Commentary:

;; This package provides a configuration for package managing.
;; It ensures installation of every required package and auto updates.
;; Some packages installation may be deferred (see https://github.com/jwiegley/use-package)

;;; Code:
(require 'package)

(add-to-list 'package-archives '("gnu" . "https://elpa.gnu.org/packages/"))
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages/"))
(add-to-list 'package-archives '("melpa-stable" . "https://stable.melpa.org/packages/"))
(package-initialize)

(unless (package-installed-p 'use-package)
  (package-refresh-contents)
  (package-install 'use-package))
(eval-when-compile
  (require 'use-package))
(require 'bind-key)

(setq use-package-always-ensure t)
(setq use-package-compute-statistics t)

(use-package use-package-ensure-system-package)

(provide 'init-packaging)
;;; init-packaging.el ends here
